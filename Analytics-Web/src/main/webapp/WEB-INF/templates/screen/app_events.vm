<div class="box">
    <div class="box-header">
        <h3 class="box-title">事件列表</h3>
    </div>
    <div class="box-body">
        <p>$!{app_name} 统计事件</p>
        <div class="margin">
			#if($!{hasEvents})
				#foreach($event in $allEvents)
					<a class="btn btn-default btn-flat" href="event_detail.htm?id=$!{event.id}">
						${event.name}
                    </a>
				#end
			#else
				该应用还没有任何事件！
			#end
			
        </div>
    </div>
</div>
<style type="text/css">
	.btn {
		margin-top: 5px;
	}
</style>